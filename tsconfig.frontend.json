{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "es2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2019",
    "pretty": true,
    "outDir": "build/frontend",
    "typeRoots": [
      "node_modules/@types",
      "src/types/*.d.ts"
    ]
  },
  "include": [
    "./src/frontend"
  ],
}
